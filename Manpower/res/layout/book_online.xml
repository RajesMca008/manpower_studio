<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/shadow_layer"
        android:orientation="vertical" >

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="1" >
            <TextView android:layout_width="match_parent" android:gravity="center" android:layout_height="wrap_content" android:text="Book now" android:textSize="22dp" android:textColor="#0000FF"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                  android:singleLine="true"
                 android:text="Full name "
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                  android:singleLine="true"
                android:layout_weight="0.5"
                  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                
                 android:text="Email address"
                android:scaleType="fitXY" />

            <EditText
                 android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                  android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_weight="0.5"
                 />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                 android:text="Contact no"
                android:scaleType="fitXY" />

            <EditText
                 android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:inputType="phone"
                  android:singleLine="true"
                android:layout_weight="0.5"
                  />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                 android:text="Help topics/Services"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/help_topic"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:layout_weight="0.5"
                  />
        </LinearLayout>

        <Button
            android:id="@+id/submit_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@color/sing_in_button"
            android:textColor="@color/white"
            android:text="Submit"
            android:layout_weight="1"
             />

         
    </LinearLayout>

</RelativeLayout>